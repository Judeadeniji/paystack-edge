{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
